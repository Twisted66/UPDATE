          <button class="service-tab px-6 py-3 rounded-full text-gray-400 font-medium bg-white/5 border border-white/10 transition-all duration-300 hover:bg-primary/20 hover:text-primary" data-tab="project6">Project 6</button>
          <button class="service-tab px-6 py-3 rounded-full text-gray-400 font-medium bg-white/5 border border-white/10 transition-all duration-300 hover:bg-primary/20 hover:text-primary" data-tab="project7">Project 7</button>
          <button class="service-tab px-6 py-3 rounded-full text-gray-400 font-medium bg-white/5 border border-white/10 transition-all duration-300 hover:bg-primary/20 hover:text-primary" data-tab="project8">Project 8</button>
          <button class="service-tab px-6 py-3 rounded-full text-gray-400 font-medium bg-white/5 border border-white/10 transition-all duration-300 hover:bg-primary/20 hover:text-primary" data-tab="project9">Project 9</button>
