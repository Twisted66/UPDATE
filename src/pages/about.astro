<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Hero content animation
    const heroContent = document.getElementById('heroContent');
    if (heroContent) {
      setTimeout(() => {
        heroContent.classList.add('opacity-100', 'translate-y-0');
      }, 500);
    }
    
    // Scroll indicator click
    const scrollIndicator = document.querySelector('.scroll-indicator');
    scrollIndicator?.addEventListener('click', () => {
      window.scrollTo({
        top: window.innerHeight,
        behavior: 'smooth'
      });
    });
    
    // Timeline items animation
    if (typeof gsap !== 'undefined' && gsap.registerPlugin) {
      gsap.registerPlugin(ScrollTrigger);
      
      gsap.utils.toArray('.timeline-item').forEach((item) => {
        gsap.to(item, {
          scrollTrigger: {
            trigger: item,
            start: 'top 80%',
            toggleClass: {targets: item, className: 'active'},
            onEnter: () => {
              item.style.opacity = 1;
              item.style.transform = 'translateY(0)';
            },
            once: true
          }
        });
      });
      
      // Stats counter animation
      gsap.utils.toArray('.stat-item').forEach((item, i) => {
        gsap.to(item, {
          scrollTrigger: {
            trigger: item,
            start: 'top 80%',
            onEnter: () => {
              item.style.opacity = 1;
              item.style.transform = 'translateY(0)';
              
              const numElement = item.querySelector('.stat-number');
              const targetNum = parseInt(numElement.getAttribute('data-target'));
              
              let count = 0;
              const updateCount = () => {
                const increment = targetNum / 100;
                if (count < targetNum) {
                  count += increment;
                  numElement.innerText = Math.ceil(count);
                  setTimeout(updateCount, 20);
                } else {
                  numElement.innerText = targetNum;
                }
              };
              
              updateCount();
            },
            once: true
          },
          delay: i * 0.2
        });
      });
    } else {
      // Fallback animation if GSAP is not available
      document.querySelectorAll('.timeline-item').forEach((item, index) => {
        setTimeout(() => {
          item.style.opacity = 1;
          item.style.transform = 'translateY(0)';
          item.classList.add('active');
        }, 300 + (index * 200));
      });
      
      document.querySelectorAll('.stat-item').forEach((item, index) => {
        setTimeout(() => {
          item.style.opacity = 1;
          item.style.transform = 'translateY(0)';
          
          const numElement = item.querySelector('.stat-number');
          const targetNum = parseInt(numElement.getAttribute('data-target'));
          
          let count = 0;
          const updateCount = () => {
            const increment = targetNum / 100;
            if (count < targetNum) {
              count += increment;
              numElement.innerText = Math.ceil(count);
              setTimeout(updateCount, 20);
            } else {
              numElement.innerText = targetNum;
            }
          };
          
          updateCount();
        }, 300 + (index * 200));
      });
    }
  });
</script>

