<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Hero content animation
    const heroContent = document.getElementById('heroContent');
    const hero3dContent = document.getElementById('hero3dContent');
    
    if (heroContent && hero3dContent) {
      setTimeout(() => {
        heroContent.classList.add('opacity-100', 'translate-y-0');
        hero3dContent.classList.add('opacity-100', 'translate-y-0');
      }, 500);
    }
    
    // 3D Animation with mouse movement
    const hero3dElement = document.querySelector('.hero-3d-element');
    const hero3dWrapper = document.querySelector('.hero-3d-wrapper');
    
    if (hero3dWrapper && hero3dElement) {
      hero3dWrapper.addEventListener('mousemove', (e) => {
        const rect = hero3dWrapper.getBoundingClientRect();
        const centerX = rect.left + rect.width / 2;
        const centerY = rect.top + rect.height / 2;
        const mouseX = e.clientX - centerX;
        const mouseY = e.clientY - centerY;
        
        const rotateX = (mouseY / rect.height) * 20;
        const rotateY = (mouseX / rect.width) * 20;
        
        hero3dElement.style.transform = `
          rotateX(${-rotateX}deg)
          rotateY(${rotateY}deg)
          translateZ(50px)
        `;
      });
      
      hero3dWrapper.addEventListener('mouseleave', () => {
        hero3dElement.style.transform = 'rotateX(0) rotateY(0) translateZ(50px)';
      });
    }
    
    // Scroll indicator click
    const scrollIndicator = document.querySelector('.scroll-indicator');
    scrollIndicator?.addEventListener('click', () => {
      window.scrollTo({
        top: window.innerHeight,
        behavior: 'smooth'
      });
    });
  });
</script>

